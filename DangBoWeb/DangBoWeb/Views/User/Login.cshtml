@model DangBoWeb.Database.User

@{
    ViewBag.Title = "Login";
}

@using (Html.BeginForm("Login", "User", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
            <h6 class="m-0 font-weight-bold text-primary">Đăng Nhập Hệ Thống</h6>
        </div>

        <div class="card-body">
            <div class="user">
                @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
                <div class="form-group">
                    <input type="text" class="form-control form-control-user" id="TaiKhoan" placeholder="Tài Khoản">
                    @Html.ValidationMessageFor(model => model.TaiKhoan, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <input type="password" class="form-control form-control-user" id="MatKhau" placeholder="Mật Khẩu">
                    @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="text-center">
                <input type="submit" value="Đăng Nhập" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

