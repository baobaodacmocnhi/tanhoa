@model IEnumerable < DangBoWeb.Models.Nhom>
@{
    ViewBag.Title = "Index";
}
@section Scripts
{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#dataTable').DataTable({
                "order": [[0, "asc"]]
            });
        });
    </script>
}

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
        <h6 class="m-0 font-weight-bold text-primary">Loại Công Văn</h6>
        <a href="@Url.Action("Create", "Nhom")" class="btn btn-primary btn-icon-split">
            <span class="text">Thêm</span>
        </a>
    </div>

    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.TenNhom)
                        </th>
                        <th>
                            Xử Lý
                        </th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.TenNhom)
                        </th>
                        <th>
                            Xử Lý
                        </th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.TenNhom)
                            </td>
                            <td>
                                <a href="@Url.Action("Edit", "LoaiCongVan",new { ID = item.MaNhom })" class="btn btn-warning">
                                    Sửa
                                </a>
                                <a href="@Url.Action("Delete", "LoaiCongVan",new { ID = item.MaNhom })" class="btn btn-danger" onclick="return confirm('Bạn có chắc chắn xóa?');">
                                    Xóa
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

