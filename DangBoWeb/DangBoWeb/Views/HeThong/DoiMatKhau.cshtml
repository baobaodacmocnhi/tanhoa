@model DangBoWeb.DoiMatKhau
@{
    ViewBag.Title = "DoiMatKhau";
}

@using (Html.BeginForm("DoiMatKhau", "HeThong", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <h4>Đổi Mật Khẩu</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(m => m.MatKhau, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.MatKhau, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmMatKhau, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfirmMatKhau, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-success" value="Đổi" />
        </div>
    </div>
}

