<div class="modal fade" id="popupDangNhap" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            @using (Html.BeginForm("DangNhap", "HeThong", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="card-header">
                    <h4>Đăng Nhập</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="card-body">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(m => m.TaiKhoan, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.TaiKhoan, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.TaiKhoan, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.MatKhau, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.PasswordFor(m => m.MatKhau, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.MatKhau, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="card-footer text-center">
                    <input type="submit" value="Đăng Nhập" class="btn btn-success"  />
                </div>
            }
        </div>
    </div>
</div>