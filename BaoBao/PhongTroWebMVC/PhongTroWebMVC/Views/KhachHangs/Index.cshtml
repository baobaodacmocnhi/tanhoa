@model IEnumerable<PhongTroWebMVC.Models.KhachHang>

@{
//Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
@using (Html.BeginForm("Index", "KhachHangs", FormMethod.Post))
{
    <h2>DANH SÁCH KHÁCH HÀNG</h2>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <div class="form-group">
        @Html.CheckBox("chkAll", false) Tất Cả
        <br />
        @Html.DisplayNameFor(model => model.Phong.Name)
        @Html.DropDownList("cmbPhong", ViewBag.cmbPhong as SelectList, "Tất Cả")
        <input type="submit" value="Load" class="btn btn-default" />
    </div>

    <table class="table">
        <tr>
            <th>
                STT
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HoTen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GioiTinh)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NgaySinh)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DienThoai)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BienSoXe)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Thue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phong.Name)
            </th>
            <th></th>
        </tr>
        @{ int rowNumber = 0; }
        @foreach (var item in Model)
        {
            <tr>
                <td>
@(rowNumber += 1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HoTen)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GioiTinh)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NgaySinh)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DienThoai)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BienSoXe)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Thue)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phong.Name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { onclick = "return confirm('Bạn có chắc chắn xóa?');" })
                </td>
            </tr>
        }

    </table>
}
</body>
</html>
