@model IEnumerable<PhongTroWebMVC.Models.ChiPhiPhong>

@{
//Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h2>DANH SÁCH CHI PHÍ PHÒNG</h2>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CreateDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ChiPhiKhac.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phong.Name)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CreateDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ChiPhiKhac.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phong.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { IDPhong = item.IDPhong, IDChiPhiKhac = item.IDChiPhiKhac }) |
                @Html.ActionLink("Details", "Details", new { IDPhong = item.IDPhong, IDChiPhiKhac = item.IDChiPhiKhac }) |
                @Html.ActionLink("Delete", "Delete", new { IDPhong = item.IDPhong, IDChiPhiKhac = item.IDChiPhiKhac  }, new { onclick = "return confirm('Bạn có chắc chắn xóa?');" })
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
